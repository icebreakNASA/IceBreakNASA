<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icebreak.adriatikgashi.icebreak">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SliderActivity" />
        <activity android:name=".IceLow" />
        <activity android:name=".IceMedium" />
        <activity android:name=".IceHigh" />
        <activity android:name=".StatisticActivity" />
        <activity android:name=".RadarActivity"></activity>
        <activity android:name=".BlizzardLow"></activity>
        <activity android:name=".EarthquakeMedium"></activity>
        <activity android:name=".EarthquakeLow"></activity>
    </application>

</manifest>