<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/you_are_safe_xml"
    tools:context="com.icebreak.adriatikgashi.icebreak.IceMedium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="62%"
        android:textColor="#ffffff"
        android:textSize="100dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="        You are safe."
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="75dp"
        android:id="@+id/textView5"
        android:layout_marginTop="110dp"/>


    <View
        android:id="@+id/view"
        android:layout_width="1dip"
        android:layout_height="380dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_ice_temperature"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@mipmap/ic_ice_iceberg"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_ice_wind"
        android:id="@+id/button4"
        android:layout_alignParentTop="@+id/button2"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="220dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:background="@mipmap/ic_ice_direction"
        android:layout_alignTop="@+id/button3"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="7 * Celsius"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="    7 mph"

        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N 7 mph"
        android:layout_marginRight="12dp"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     North"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignEnd="@+id/button5" />
</RelativeLayout>